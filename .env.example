# Public API endpoints
NEXT_PUBLIC_S3_ENDPOINT=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:3000
API_URL=http://localhost:3000

# Source.coop configuration
SOURCE_KEY=your_source_key_here

# AWS Configuration
AWS_REGION=us-west-2
# Uncomment and set these for production
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Ory.sh configuration
ORY_PROJECT_API_KEY=your_ory_access_token
NEXT_PUBLIC_ORY_SDK_URL=https://{unique-subdomain}.projects.oryapis.com

# For local development, use the same base URL for both public and private
ORY_BASE_URL=http://localhost:4000

# Storage configuration
METADATA_BUCKET=source-coop-metadata
STORAGE_TYPE=S3
STORAGE_ENDPOINT=us-west-2.opendata.source.coop

# DynamoDB configuration (for local development)
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_ACCESS_KEY_ID=local
DYNAMODB_SECRET_ACCESS_KEY=local

# Remove AWS credentials for public bucket access
# AWS_ACCESS_KEY_ID=local
# AWS_SECRET_ACCESS_KEY=local
